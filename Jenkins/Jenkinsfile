pipeline {
    agent any

    environment {
        tfHome = tool name: 'terraform'
        PATH = "${tfHome}:${PATH}"
    }

    stages {
        stage('Ensure Terraform Installation') {
            steps { sh ‘terraform — version' }
        }

        stage('Provision infrastructure') {
            steps {
                dir('infrastructure') {
                    sh 'terraform init'
                    sh 'terraform plan --out=plan'
                    // sh 'terraform destroy -auto-approve'
                    // sh 'terraform apply plan'
                }
            }
        }
    }
}